<h1>New Article</h1>
<%= form_for @article  do |f| %>
<% if @article.errors.any? %>
       <div class="error_message">
       <ul>
          <% for message in @article.errors.full_messages %>
          <%= message %>
          <% end %>
       </ul>
       </div>
<% end %>
<%= f.label :title %> <br />
<%= f.text_field :title %>
<br/>
<%= f.label :body %><br /> 
<%= f.text_area :body%>
<br/>
<%= f.submit "create" %>
<% end %>
