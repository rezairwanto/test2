<h1>Show Article</h1>
<% flash[:error] %>
<% if @article.errors.any? %>
       <div class="error_message">
       <ul>
          <% for message in @article.errors.full_messages %>
          <%= message %>
          <% end %>
       </ul>
<% end %>
<h4>Title</h4><br /> 
<%= @article.title %><br />
<h4>Body</h4>
<%= @article.body %><br />


<h4> Comment </h4>

<div id="comments">
<%= render :partial => "comments", :locals => {:comments => @comments}  %>
</div><br /><br />
<div>

<%= form_for @comment, :url => comments_path, :remote => true do |f| %>
<%= f.text_area :comment %>
      <%= f.hidden_field :article_id, :value => @article.id %>
      <br />
      <%= submit_tag "comment" %>
<% end %>

</div>




